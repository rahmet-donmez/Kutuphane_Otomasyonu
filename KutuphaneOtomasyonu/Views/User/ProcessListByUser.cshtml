@using Entity.Models
@model List<Process>

<html>



<body>
    <!--  wrapper -->
    <div id="wrapper">
        <!-- navbar top -->
        <!-- end navbar top -->
        <!-- navbar side -->
       
        <!--  page-wrapper -->
        <div id="page-wrapper">


            <div class="row">
                <!--  page header -->
                <div class="col-lg-12">
                    <h1 class="page-header">Kitaplar Hareketlerim</h1>
                </div>
                <!-- end  page header -->
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <!-- Advanced Tables -->
                    <div class="panel panel-default">
                        
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Kitap Adı</th>
                                            <th>İşlem Türü</th>
                                            <th>İşlem Tarihi</th>
                                            <th>Durumu</th>
                                            

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int i = 1;
                                        
                                        foreach(var process in Model){
                                            <tr class="gradeU">
                                            <td>@i</td>
                                                    <td>@ViewBag.Books[i-1]</td>
                                                    <td>@process.type</td>
                                            <td>@process.date</td>
                                           
                                                   
                                                    @if (process.deleted==true)
                                                {
                                                        <td class="success"> <b> </b>İşlem tamamlandı</td>
                                                }
                                                                               
                                                else
                                                {
                                                        <td class="danger">İadesi gerçekleşmedi</td>
                                                    }
                                                         </tr>
                                                i++;
                                            }
                                        }
                                        
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                    <!--End Advanced Tables -->
                </div>
            </div>
            
        </div>
        <!-- end page-wrapper -->

 
    

</body>

</html>
